    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.12",
    "@types/glob": "^7.1.4",
    "@types/hast": "^2.3.4",
    "@types/jest": "^27.0.1",
    "@types/lz-string": "^1.3.34",
    "@types/mdast": "^3.0.10",
    "@types/mdx-js__react": "^1.5.4",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.2",
    "@types/react-router-dom": "^5.1.8",
