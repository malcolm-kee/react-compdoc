{
  "name": "react-showroom-workspace",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*",
      "docs"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.1.4",
    "@types/hast": "^2.3.4",
    "@types/jest": "^27.0.2",
    "@types/lz-string": "^1.3.34",
    "@types/mdast": "^3.0.10",
    "@types/mdx-js__react": "^1.5.4",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.2",
    "@types/react-router-dom": "^5.3.0",
    "@types/rimraf": "^3.0.2",
    "@types/temp": "^0.9.1",
    "@types/yargs": "^17.0.3",
    "concurrently": "^6.2.2",
    "jest": "^27.2.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.57.0",
    "ts-jest": "^27.0.5",
    "type-fest": "^2.3.4",
    "why-is-node-running": "^2.2.0"
  },
  "scripts": {
    "prepare": "pnpm run build --filter=\"{packages}\"",
    "build": "pnpm run build --filter=\"{packages}\"",
    "test": "pnpm run test:ci -r",
    "docs:build": "pnpm run build --filter=\"react-showroom-docs\"",
    "example:build": "pnpm run build --filter=\"react-example\"",
    "dev": "pnpm run dev -r --stream --parallel",
    "clean": "pnpm run clean -r",
    "preinstall": "npx only-allow pnpm",
    "changeset": "changeset"
  }
}
