{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2015",
        "moduleResolution": "node",
        "lib": ["DOM", "ESNext"],
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "jsx": "react",
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "outDir": "client-dist",
        "skipLibCheck": true
    },
    "include": ["client"]
}