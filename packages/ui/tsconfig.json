{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "importHelpers": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
