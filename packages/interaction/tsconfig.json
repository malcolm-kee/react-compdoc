{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "sourceMap": true,
    "jsx": "react",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
