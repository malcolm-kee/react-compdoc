{
  "name": "@showroomjs/core",
  "version": "1.12.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist-esm/index.js",
  "types": "dist-esm/index.d.ts",
  "scripts": {
    "build": "pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc -b .",
    "build:esm": "tsc --project tsconfig.esm.json",
    "dev": "concurrently \"pnpm dev:cjs\" \"pnpm dev:esm\"",
    "dev:cjs": "pnpm build:cjs -- --watch",
    "dev:esm": "pnpm build:esm -- --watch",
    "clean": "rimraf dist dist-esm *.tsbuildinfo",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --watchAll=false --coverage --runInBand"
  },
  "devDependencies": {
    "esbuild": "^0.14.5",
    "html-webpack-tags-plugin": "^3.0.2",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0"
  },
  "peerDependencies": {
    "esbuild": "^0.14.0",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "acorn": "^8.6.0",
    "acorn-walk": "^8.2.0",
    "domutils": "^2.8.0",
    "htmlparser2": "^7.2.0",
    "prism-react-renderer": "^1.2.1",
    "tslib": "^2.3.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
