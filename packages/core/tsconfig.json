{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "importHelpers": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "skipLibCheck": true
    },
    "include": ["src"]
}